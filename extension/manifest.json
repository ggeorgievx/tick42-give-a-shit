{
  "manifest_version": 2,
  "name": "Tick42 Extension",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "lib/tick42-glue-core.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "pop-up/index.html",
    "default_icon": "assets/tick42.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.takeaway.com/*"
      ],
      "css": [
        "contentScripts/takeaway-injected.css"
      ],
      "js": [
        "contentScripts/takeaway-injected.js"
      ]
    }
  ]
}
